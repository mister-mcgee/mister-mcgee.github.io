---
import { Lesson } from "@components/learn/";
import Layout from "@layouts/Layout.astro";
import Drawer from "@layouts/Drawer.astro";
import { getCollection                       } from "astro:content";
import { Construction, LibraryBig, Lightbulb } from "@lucide/astro";

// retrieve lessons and sort by date
const lessons = (await getCollection("lessons")).sort(Lesson.compare)
---

<Layout>
  <Drawer>
    <div class="flex flex-col w-full h-full items-center">
      <div class="h-4"></div>
      <div class="flex flex-row gap-1">
        <LibraryBig class="w-10 h-10"/>
        <span class="text-4xl font-bold text-center">Ideas</span>
      </div>      
      <div class="h-4"></div>
      <div class="w-full flex flex-row flex-wrap max-w-xs justify-center sm:max-w-2xl lg:max-w-5xl">
        { lessons.map(lesson => (
          <a href={`/learn/${Lesson.slug(lesson)}`} class="flex flex-row flex-1 max-w-xs items-center p-4 rounded-lg hover:bg-base-200">
            { !Lesson.isDraft(lesson) && <Lightbulb    class="w-10 h-10"/> }
            {  Lesson.isDraft(lesson) && <Construction class="w-10 h-10"/> }
            <div class="divider divider-horizontal"></div>
            <div class="flex flex-col flex-1 items-start">
              <span class="text-lg sm:text-xl font-bold">{lesson.data.title }</span>
              { lesson.data.pubDate && <span class="text-sm sm:text-lg">{lesson.data.pubDate?.toDateString()}</span>}
            </div>
          </a>
        ))}
      </div>
    </div>
  </Drawer>
</Layout>