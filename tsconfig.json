{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/ui/components/*"
      ],
      "@layouts/*": [
        "src/ui/layouts/*"
      ],
      "@styles/*": [
        "src/ui/styles/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@idea/*": [
        "src/idea/*"
      ],
      "@glossary/*": [
        "src/glossary/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}